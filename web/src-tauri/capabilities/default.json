{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main ChatCut window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$VIDEO/**" },
        { "path": "$AUDIO/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$TEMP/**" },
        { "path": "/tmp/**" }
      ]
    }
  ]
}
