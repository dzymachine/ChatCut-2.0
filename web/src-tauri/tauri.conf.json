{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "ChatCut",
  "version": "0.1.0",
  "identifier": "com.chatcut.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3002",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "ChatCut â€” AI Video Editor",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 680,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: asset: https://asset.localhost http://localhost:*; media-src 'self' blob: asset: https://asset.localhost http://localhost:* file://*; connect-src 'self' http://localhost:* https://asset.localhost asset://localhost https://*.googleapis.com https://*.groq.com https://api.runwayml.com; font-src 'self' data:",
      "dangerousDisableAssetCspModification": ["script-src", "style-src"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {}
  }
}
